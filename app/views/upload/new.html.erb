    <div class="page-header">
        <h1>@SJSU Ads</h1>
    </div>
    
    <div class="col-sm-12">     
      <% @ads.each do |ad| %>
        <div class="row">
                  <div class="panel panel-info">
                      
                    <div class="panel-heading">
                      <div class = "row">
                        <div class="col-xs-3 adType">
                            <%= ad.ad_type %>
                        </div>
                        <div class="col-xs-6 adName">
                            <%= ad.ad_name %>
                        </div> 
                        <div class="col-xs-3 adTime">
                            <%= ad.ad_time %>
                        </div>
                      </div>
                    </div>
                      
                    <div class="panel-body">
                      <div class="row">
                        <div class="col-xs-12 adDescription">
                            <%= ad.ad_description %>
                            <br>
                            <br>
                            <a href="javascript:;">Click here for more information</a>
                        </div>
                      </div>    
                      
                      <hr>    
                      
                      <div class="row">
                          <div class="col-xs-12">
                              <p>Content Provider Information</p>
                          </div>
                      </div>  
                        
                      <div class="row">
                        <div class="col-xs-12">
                        <p>Share</p>
                        <div class="col-xs-3"><i class="fa fa-facebook fa-2x" aria-hidden="true"></i></div>
                          <div class="col-xs-3"><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></div>
                          <div class="col-xs-3"><i class="fa fa-snapchat-ghost fa-2x" aria-hidden="true"></i></div>
                          <div class="col-xs-3"><i class="fa fa-google-plus fa-2x" aria-hidden="true"></i></div>
                        </div>
                      </div>

                      
                    </div>
                  </div>
              </div>

      <% end %>
    </div>
</div>

<footer class="container-fluid">
  <p>Team Mibi CS100W Section 2 Fall 2016</p>
