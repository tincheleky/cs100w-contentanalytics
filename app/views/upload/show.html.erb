    <div class="col-sm-12">     
      <% @ads.each do |ad| %>
        <div class="row">
                  <div class="panel panel-info">
                      
                    <div class="panel-heading">
                      <div class = "row">
                        <div class="col-xs-3 adType">
                            <%= ad.ad_type %>
                        </div>
                        <div class="col-xs-6 adName">
                            <%= ad.ad_name %>
                        </div> 
                        <div class="col-xs-3 adTime">
                            <%= ad.ad_time %>
                        </div>
                      </div>
                    </div>
                      
                    <div class="panel-body">
                      <div class="row">
                        <div class="col-xs-12 adDescription">
                            <%= ad.ad_description %>
                            <br>
