<p id="notice"><%= notice %></p>

<h1>Ads</h1>

<table>
  <thead>
    <tr>
      <th>Display</th>
      <th>Ad</th>
      <th>Type</th>
      <th>Name</th>
      <th>Time</th>
      <th>Duration</th>
      <th>Url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.ad_display_id %></td>
        <td><%= ad.id %></td>
        <td><%= ad.ad_type %></td>
        <td><%= ad.ad_name %></td>
        <td><%= ad.ad_time %></td>
        <td><%= ad.ad_duration %></td>
        <td><%= ad.ad_url %></td>
        <td><%= ad.ad_description %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
